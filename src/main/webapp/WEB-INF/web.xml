<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">
  <display-name>Table Tennis</display-name>
  <servlet>
    <description></description>
    <display-name>Servlets</display-name>
    <servlet-name>LoginPlayer</servlet-name>
    <servlet-class>com.tabletennis.LoginPlayer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginPlayer</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>AuthenticateFilter</filter-name> <!-- mandatory -->
    <filter-class>com.tabletennis.AuthenticateFilter</filter-class> <!-- mandatory -->
  </filter>
  <filter-mapping>
    <filter-name>AuthenticateFilter</filter-name> <!-- mandatory -->
    <url-pattern>/*</url-pattern> <!-- either url-pattern or servlet-name is mandatory -->
    <servlet-name>LoginPlayer</servlet-name>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>
